# Storage Configuration

# Storage type: 'local', 's3', or 'gcs'
STORAGE_TYPE=local

# Local Storage Settings
LOCAL_UPLOAD_DIR=uploads/photos

# AWS S3 Settings (if using S3)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=your-photo-bucket

# Google Cloud Storage Settings (if using GCS)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json
GCS_BUCKET_NAME=your-photo-bucket

# CDN Settings (optional)
CDN_BASE_URL=https://your-cdn-domain.com

# Image Processing Settings
MAX_ORIGINAL_WIDTH=2048
MAX_ORIGINAL_HEIGHT=2048
THUMBNAIL_SIZE=300
MEDIUM_SIZE=800
JPEG_QUALITY_ORIGINAL=90
JPEG_QUALITY_MEDIUM=85
JPEG_QUALITY_THUMBNAIL=80
